{
  "name": "Memory Anchor",
  "short_name": "Mem Anchor",
  "description": "EECS 497 Chrome Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "/manifest-icons/anchor-128-icon.png",
    "default_width": 400
  },
  "icons": {
    "16": "manifest-icons/anchor-16-icon.png",
    "32": "manifest-icons/anchor-32-icon.png",
    "48": "manifest-icons/anchor-48-icon.png",
    "128": "manifest-icons/anchor-128-icon.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "offscreen"
  ],
  "background": {
    "service_worker": "/js/background.js"
  }
}